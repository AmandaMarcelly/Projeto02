
@model Categoria

<form asp-action="CadastroCategoria" method="post" enctype="multipart/form-data">
    <fieldset>
        <div class="jumbotron">

            <legend>Cadastrar Categoria</legend>
            <div asp-validation-summary="ModelOnly"
                 class="text-primary"></div>

            <div class="form-group" id="Categoria">
                <label asp-for="Nome"></label>
                <input type="text" asp-for="Nome"
                       class="form-control" />
                <span asp-validation-for="Nome"
                      class="text-primary"></span>
            </div>

            <button type="submit" class="btn btn-outline-primary">Cadastrar</button>


        </div>

    </fieldset>
</form>