
@model Disponibilidade

<form asp-action="DisponibilidadeMedico" method="post" enctype="multipart/form-data">
    <fieldset>
        <div class="jumbotron">

            <h2>Cadastrar Disponibilidade</h2>
            <div asp-validation-summary="ModelOnly"
                 class="text-primary"></div>

            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="customSwitch1" checked="">
                    <label class="custom-control-label" for="customSwitch1">Todos os dias</label>
                </div></br>

                <div class="custom-control custom-switch">
                    <input type="checkbox" asp-for="Segunda" class="custom-control-input" id="customSwitch2">
                    <label class="custom-control-label" for="customSwitch2">Segunda-Feira</label>
                </div>

                <div class="custom-control custom-switch">
                    <input type="checkbox" asp-for="Terca" class="custom-control-input" id="customSwitch3">
                    <label class="custom-control-label" for="customSwitch3">Terça-Feira</label>
                </div>

                <div class="custom-control custom-switch">
                    <input type="checkbox" asp-for="Quarta" class="custom-control-input" id="customSwitch4">
                    <label class="custom-control-label" for="customSwitch4">Quarta-Feira</label>
                </div>

                <div class="custom-control custom-switch">
                    <input type="checkbox" asp-for="Quinta" class="custom-control-input" id="customSwitch5">
                    <label class="custom-control-label" for="customSwitch5">Quinta-Feira</label>
                </div>
                <div class="custom-control custom-switch">
                    <input type="checkbox" asp-for="Sexta" class="custom-control-input" id="customSwitch6">
                    <label class="custom-control-label" for="customSwitch6">Sexta-Feira</label>
                </div>

                <div class="custom-control custom-switch">
                    <input type="checkbox" asp-for="Sabado" class="custom-control-input" id="customSwitch7">
                    <label class="custom-control-label" for="customSwitch7">Sábado</label>
                </div>

                <input type="text" asp-for="Medico" class="hidden" style="display: none" />
                <input type="text" asp-for="Id" class="hidden" style="display: none" />
                <button type="submit" class="btn btn-outline-primary">Cadastrar</button>


            </div>

    </fieldset>
</form>