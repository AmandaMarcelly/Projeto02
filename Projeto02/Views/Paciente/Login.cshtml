@model Domain.Paciente

<fieldset>
    <div class="jumbotron">

        <h2>login</h2>
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="Login" for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1"
                       aria-describedby="emailHelp" placeholder="Enter email"
                       asp-for="Login">
                <small id="emailHelp" class="form-text text-muted">Nunca compartilharemos os seus dados.</small>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" for="exampleInputPassword1">Senha</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                       asp-for="Senha">
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-outline-primary">Entrar</button>
            <a class="btn btn-outline-primary"
               asp-action="CadastroPaciente">Cadastrar</a>
        </form>

    </div>

</fieldset>









